name: Deploy to Firebase Hosting

on:
  push:
    branches:
      - main  # mainブランチにpushしたら自動デプロイ

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: リポジトリを取得
        uses: actions/checkout@v3

      - name: Node.jsをセットアップ
        uses: actions/setup-node@v3
        with:
          node-version: '20'

      - name: Firebase CLIをインストール
        run: npm install -g firebase-tools@13.35.1

      - name: Firebaseに認証
        env:
          FIREBASE_SERVICE_ACCOUNT: ${{ secrets.FIREBASE_SERVICE_ACCOUNT }}
        run: |
          echo "$FIREBASE_SERVICE_ACCOUNT" > mofupage-sa.json
          export GOOGLE_APPLICATION_CREDENTIALS=$(pwd)/mofupage-sa.json

      - name: Firebase Hostingにデプロイ
        run: firebase deploy --only hosting --project mofupage
